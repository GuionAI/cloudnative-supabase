# Example CNPG secrets template
# Copy this file and replace PLACEHOLDER values with real passwords
# Then encrypt with SOPS before committing
#
# Generate passwords with: openssl rand -hex 32
---
apiVersion: v1
kind: Secret
metadata:
  name: cnpg-supabase-admin-password
  namespace: NAMESPACE_PLACEHOLDER
  labels:
    cnpg.io/reload: "true"
type: kubernetes.io/basic-auth
stringData:
  username: supabase_admin
  password: "REPLACE_WITH_GENERATED_PASSWORD"
